<% include header.ejs %>

<div class="row main-gallery">
    <div class="col-md-12">
        <h3><%= info.display_name %></h3>
        <p><i><%= info.medium %></i></p>
        <p><%= info.description %></p>
        <ul>
            <% for(var i = 0; i < gallery.length; i++) { %>
                <li>
                    <a href="../<%= name %>/<%= gallery[i] %>" data-lightbox="gallery">
                        <img src="../<%= name %>/<%= gallery[i] %>" />
                    </a>
                </li>
            <% } %>
        </ul>
    </div>
</div>

<% include footer.ejs %>