<% include header.ejs %>

<div class="row">
    <!-- TODO make the centering here better -->
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h2><b><%= info.display_name %></b></h2>
        <p><i><%= info.medium %></i></p>
        <p><%= info.description %></p>
        <ul class="piece-gallery-ul">
            <% for(var i = 0; i < gallery.length; i++) { %>
                <li class="piece-gallery-li">
                    <a href="../<%= name %>/<%= gallery[i] %>" data-lightbox="gallery">
                        <img src="../<%= name %>/<%= gallery[i] %>" style="width:100%" />
                    </a>
                </li>
            <% } %>
        </ul>
    </div>
    <div class="col-md-3"></div>
</div>

<% include footer.ejs %>